{
	"configurations": [
		{
			"name": "Linux",
			"includePath": [
				{% if PLATFORM_IS_LINUX-%}
				"{{ PYTHON_INCLUDE_DIR }}",
				{% endif-%}
				"${workspaceFolder}/../core/**",
				"${workspaceFolder}/**"
			],
			"defines": [
				"NTT_PLATFORM_LINUX=1",
				"NTT_DEBUG=1",
				"NTT_USE_GRAPHICS_VULKAN=1",
				"NTT_USE_GRAPHICS_OPENGL=0",
				"NTT_USE_GLFW=1",
				"NTT_NO_ANALYZE=1",
				"NTT_IDE_APPLICATION=1",
				"NTT_ENGINE_EDITOR_BINDING=0",
				"NTT_ENGINE_DIRECTORY=\"{{ BASE_DIR }}\""
			],
			"compilerPath": "/usr/bin/clang",
			"cStandard": "c17",
			"cppStandard": "c++17",
			"intelliSenseMode": "linux-clang-x64"
		},
		{
			"name": "Windows",
			"includePath": [
				{% if PLATFORM_IS_WINDOWS-%}
				"{{ PYTHON_INCLUDE_DIR }}"
				{% endif-%}
				"${workspaceFolder}/**"
			],
			"defines": [
				"NTT_PLATFORM_WINDOWS",
				"NTT_DEBUG",
				"NTT_NO_ANALYZE",
				"NTT_ENGINE_EDITOR_BINDING",
				"NTT_ENGINE_DIRECTORY=\"{{ BASE_DIR }}\""
			],
			"compilerPath": "clang.exe",
			"cStandard": "c17",
			"cppStandard": "c++17",
			"intelliSenseMode": "windows-clang-x64"
		}
	],
	"version": 4
}
