{
	"cppProjects": [
		{
			"relPath": "core",
			"test": "EngineCoreTests"
		},
		{
			"relPath": "runtime",
			"run": "EngineRuntime"
		},
		{
			"relPath": "ide",
			"run": "EngineIDE"
		}
	],
	"pythonProjects": [
		{
			"relPath": "autogen",
			"cleans": ["autogen/temp"],
			"test": {
				"command": "uv run --quiet pytest",
				"cwd": "autogen"
			}
		},
		{
			"relPath": "editor",
			"preRun": {
				"command": "uv run helper.py run autogen && uv run helper.py build core --platform=linux --type=release --sections editor"
			},
			"install": {
				"command": "uv --quiet run install.py",
				"cwd": "editor"
			},
			"cleans": [
				"editor/Engine/EngineCoreBinding.so",
				"editor/main.spec",
				"core/build/*_editor*/EngineCoreBinding.so.stamp"
			],
			"test": {
				"command": "uv run --quiet pytest",
				"cwd": "editor"
			}
		},
		{
			"relPath": "runtool",
			"install": {
				"command": "uv --quiet run install.py",
				"cwd": "runtool"
			}
		}
	],
	"commands": {
		"designer": {
			"command": "uv run pyside6-designer",
			"cwd": "editor"
		}
	}
}
