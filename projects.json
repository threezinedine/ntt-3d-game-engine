{
	"cppProjects": [
		{
			"relPath": "core"
		},
		{
			"relPath": "runtime",
			"executable": "EngineRuntime"
		}
	],
	"pythonProjects": [
		{
			"relPath": "autogen",
			"cleans": ["autogen/temp"],
			"test": {
				"command": "uv run --quiet pytest",
				"cwd": "autogen"
			}
		},
		{
			"relPath": "editor",
			"preRun": {
				"command": "uv run helper.py run autogen && uv run helper.py build core --platform=linux --type=release"
			},
			"install": {
				"command": "uv --quiet run install.py",
				"cwd": "editor"
			},
			"cleans": [
				"editor/Engine/EngineCoreBinding.so",
				"editor/main.spec",
				"core/build/*_release/EngineCoreBinding.so.stamp"
			]
		}
	]
}
